{
  "name": "interactive-interfaces",
  "description": "A Gallery of interactive interfaces made with React, TailwindCSS, Framer Motion and TypeScript",
  "version": "1.0.0",
  "author": "Jitendra Nirnejak <jeetnirnejak@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
