    "dotenv": "^17.3.1",
    "inspx": "^0.0.1-alpha.6",
    "motion": "^12.34.3",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "babel-plugin-react-compiler": "^1.0.0",
    "@biomejs/biome": "^2.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3"
